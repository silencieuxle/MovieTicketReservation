@using MovieTicketReservation.ViewModels
@model LoginModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-push-2 col-panel col-xs-12">
            <h1>&nbsp;</h1>
            @using (Html.BeginForm("Login", "User", FormMethod.Post, htmlAttributes: new { @class = "col-sm-8 col-sm-push-2 col-xs-12 form-horizontal" })) {
                <h2 class="separator">Đăng nhập</h2>
                <h4>@Html.ValidationSummary()</h4>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-4" })
                    <div class="col-sm-8">
                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <input type="submit" value="Đăng nhập" class="btn btn-success" style="float: right" />
            }
            <h1>&nbsp;</h1>
        </div>
    </div>
</div>
