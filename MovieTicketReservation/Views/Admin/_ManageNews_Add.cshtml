@using MovieTicketReservation.ViewModels
@model PostUploadModel

<script type="text/javascript" src="~/Scripts/tinymce/tinymce.min.js"></script>
<link href="~/Content/fileupload.min.css" rel="stylesheet" />
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
    });
</script>

<div class="col-sm-8 col-sm-push-2">
    <h2 class="separator">Thêm tin tức</h2>
    <form action="/Admin/AddNews" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Tên bài viết</label>
            @Html.TextBoxFor(model => model.Title, htmlAttributes: new { @class = "form-control", placeholder = "Tên bài viết" })
        </div><br />
        <div class="form-group">
            <label>Mô tả ngắn</label>
            @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", placeholder = "Mô tả ngắn" })
        </div><br />
        <div class="form-group">
            <div class="btn btn-primary btn-file">
                <i class="glyphicon glyphicon-folder-open"></i>
                &nbsp;Hình cover …<input accept="image/*" name="ThumbnailURL" type="file">
            </div>
        </div>
        <div class="form-group">
            <label>Nội dung</label>
            <textarea id="txtContent" name="Content" style="width:100%"></textarea>
        </div>
        <div class="form-group">
            <label>Tags</label>
            <input name="Tags" class="form-control" placeholder="Nhập tags, cách nhau bằng space" />
        </div>
        <div class="form-group">
            <button id="btnSubmit" type="submit" style="float: right" class="btn btn-success">Thêm</button>
            <button id="btnCancel" type="button" style="float: right; margin-right: 50px;" class="btn btn-danger">Huỷ</button>
        </div>
    </form>
</div>
