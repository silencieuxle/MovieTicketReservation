<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - CINE4U</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700&subset=latin,vietnamese' rel='stylesheet' type='text/css' />
    @Styles.Render("~/bundles/website")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/scripts.js" type="text/javascript"></script>
    <meta name="description" content="The description of my page" />
</head>
<body>
    <!-- FACEBOOK JavaScript SDK -->
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            var js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.0";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, "script", "facebook-jssdk"));
    </script>
    <!-- END SCRIPT -->
    <!-- HEADER -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">CINE4U</a>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-link"><a href="/Cinemas">rạp</a></li>
                    <li class="nav-link"><a href="/Movies">phim</a></li>
                    <li class="nav-link"><a href="/Schedules">giá vé</a></li>
                    <li class="nav-link"><a href="/News">tin tức/ưu đãi</a></li>
                    <li class="nav-link"><a href="/Home/About">giới thiệu</a></li>
                </ul>

                @using (Html.BeginForm("Index", "Movies", new { }, FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-right" })) {
                    <div class="form-group">
                        <input type="text" name="query" class="form-control search-box" placeholder="Tìm phim">
                    </div>
                    <button type="submit" class="btn btn-info search-btn"><i class="fa fa-search"></i></button>
                }

                @{
                    Html.RenderPartial("_LoginTemplate");
                }
            </div>
        </div>
    </div>
    <!-- END HEADER -->
    <!-- BODY -->
    <div class="page-body">
        @RenderBody()
    </div>
    <!-- END BODY -->
    <!-- FOOTER -->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <h4 class="footer-col-header">Follow us</h4>
                    <ul class="footer-list">
                        <li><i class="fa fa-facebook"></i><a href="http://www.facebook.com">Facebook</a></li>
                        <li><i class="fa fa-twitter"></i><a href="http://www.twitter.com">Twitter</a></li>
                        <li><i class="fa fa-youtube"></i><a href="http://www.youtube.com">Youtube</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <h4 class="footer-col-header">About us</h4>
                    <ul class="footer-list">
                        <li><a href="#">Contact us</a></li>
                        <li><a href="#">Privacy policy</a></li>
                        <li><a href="#">Careers</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <div class="modal fade in" id="modalLogin" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                @using (Html.BeginForm("Login", "User", new { currentURL = Request.RawUrl }, FormMethod.Post)) {
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Đăng nhập</h4>
                    </div>
                    <div class="modal-body">
                        <label>Email:</label>
                        @Html.TextBox("Email", null, htmlAttributes: new { @class = "form-control" })
                        <br />
                        <label>Password:</label>
                        @Html.Password("Password", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Đăng nhập" class="btn btn-default" />
                        <input type="button" value="Huỷ bỏ" data-dismiss="modal" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
    <script>
        $("#btnLogin").click(function () {
            $("#modalLogin").modal("show");
        });
    </script>
</body>
</html>
